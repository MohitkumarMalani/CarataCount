@model Employee
@{
    ViewData["Title"] = ViewBag.PageName + " Page";
}

<div class="container-fluid mt-4">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Employee</h1>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="white" height="12" width="12" class="m-1"><path xmlns="http://www.w3.org/2000/svg" d="M362.7 19.3L314.3 67.7 444.3 197.7l48.4-48.4c25-25 25-65.5 0-90.5L453.3 19.3c-25-25-65.5-25-90.5 0zm-71 71L58.6 323.5c-10.4 10.4-18 23.3-22.2 37.4L1 481.2C-1.5 489.7 .8 498.8 7 505s15.3 8.5 23.7 6.1l120.3-35.4c14.1-4.2 27-11.8 37.4-22.2L421.7 220.3 291.7 90.3z"></path></svg>
            Edit Employee
        </a>
    </div>

    <div class="card shadow mb-4 mx-3">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Employee Information</h6>
        </div>
        <div class="card-body">

            Id: @Model.Id
            <hr />
            Name: @Model?.Name
            <hr />

            Email: @Model?.Email
            <hr />

            Phone Number: @Model?.PhoneNumber

        </div>
    </div>

    <div class="card shadow mb-4 mx-3">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Diamond Packet Assign Information</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive" style="overflow: hidden;">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="col-sm-12 ">
                        <table class="table table-bordered dataTable text-muted" id="dataTable" cellspacing="0" role="grid">
                            @if (Model.DiamondPacketProcesses.Any())
                            {
                                <thead>
                                    <tr>
                                        <th>Start Date</th>
                                        <th>Complete Date</th>
                                        <th>Status</th>
                                        <th>Process</th>
                                        <th>User Cost</th>
                                        <th>Client Charge</th>
                                        <th>Final Carat</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var diamondPacketProcesses in Model.DiamondPacketProcesses)
                                    {
                                        <tr>
                                            <td>@diamondPacketProcesses.StartDate</td>
                                            <td>@diamondPacketProcesses.CompleteDate </td>
                                            <td>@diamondPacketProcesses.Status</td>
                                            <td>@diamondPacketProcesses?.Process?.Name</td>
                                            <td>@diamondPacketProcesses?.ProcessPrice?.UserCost</td>
                                            <td>@diamondPacketProcesses?.ProcessPrice?.ClientCharge</td>
                                            <td>@diamondPacketProcesses?.FinalCaratWeight</td>
                                            <td>

                                                <a asp-action="AssignEdit" asp-route-id="@diamondPacketProcesses.Id" asp-controller="DiamondPacket" class="btn btn-warning" title="Edit">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="white" height="14" width="14" class="m-1"><path xmlns="http://www.w3.org/2000/svg" d="M362.7 19.3L314.3 67.7 444.3 197.7l48.4-48.4c25-25 25-65.5 0-90.5L453.3 19.3c-25-25-65.5-25-90.5 0zm-71 71L58.6 323.5c-10.4 10.4-18 23.3-22.2 37.4L1 481.2C-1.5 489.7 .8 498.8 7 505s15.3 8.5 23.7 6.1l120.3-35.4c14.1-4.2 27-11.8 37.4-22.2L421.7 220.3 291.7 90.3z"></path></svg>
                                                </a>

                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            }
                            else
                            {
                                <tr><p>No diamond packets assign information available.</p></tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
